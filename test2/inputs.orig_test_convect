# this set of parameters appears to reproduce the original initial
# model in test_convect, which was used in paper III.  Note: Coulomb
# corrections we off back then.

eos.use_eos_coulomb = 0

problem.xmin = 0.0
problem.xmax = 3.6e8

problem.base_height = 1.e8

problem.entropy_jump = 3.e0
problem.entropy_end  = 6.e0

problem.dens_base = 2.6e9
problem.temp_base = 7.e8

problem.g_zone = -1.5e10

problem.low_density_cutoff = 1.e-4
problem.temp_fluff = 1.e7

